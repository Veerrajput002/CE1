<%- include("header") %>
<center>
    <h5 style="margin-top: 30px; background-color: black; color: white; width: 50%;">Edit Achievement</h5>
</center>
<div class="container d-flex justify-content-center mt-3" style="width:100%;">
    <div class="col-md-6">
        <form action="/achievementeditpost" method="post">
            <% if (achievement && achievement._id) { %>
                <input type="hidden" name="id" value="<%= achievement._id %>">
            <% } %>

            <div class="form-group row">
                <label for="user_id" class="col-sm-3 col-form-label">
                    User Id
                </label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" name="user_id" value="<%= achievement ? achievement.user_id : '' %>" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="achievement_name" class="col-sm-3 col-form-label">
                    Achievement Name
                </label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" name="achievement_name" value="<%= achievement ? achievement.achievement_name : '' %>" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="description" class="col-sm-3 col-form-label">
                    Description
                </label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" name="description" value="<%= achievement ? achievement.description : '' %>" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="earned_at" class="col-sm-3 col-form-label">
                    Earned At
                </label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" name="earned_at" value="<%= achievement ? achievement.earned_at : '' %>" required>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-9 offset-sm-3">
                    <input type="submit" class="btn btn-default" value="Submit" aria-pressed="true">
                </div>
            </div>
        </form>
    </div>
</div>
<%- include("footer") %>
