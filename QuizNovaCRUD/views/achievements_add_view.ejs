<%- include("header") %>
<center><h5 style="margin-top: 30px; background-color: black; color: white; width: 50%;">Add Achievement</h5></center>
<div class="container d-flex justify-content-center mt-3" style="width:100%;">
    <div class="col-md-6">
    <form action="/achievementaddpost" method="post">
        <!-- User Id Field -->
        <div class="form-group row">
            <label for="user_id" class="col-sm-3 col-form-label">User Id</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="user_id" name="user_id" required>
            </div>
        </div>
        <!-- Achievement Name Field -->
        <div class="form-group row">
            <label for="achievement_name" class="col-sm-3 col-form-label">Achievement Name</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="achievement_name" required>
            </div>
        </div>
        <!-- Description Field -->
        <div class="form-group row">
            <label for="description" class="col-sm-3 col-form-label">Description</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="description" required>
            </div>
        </div>
        <!-- Earned At Field -->
        <div class="form-group row">
            <label for="earned_at" class="col-sm-3 col-form-label">Earned At</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="earned_at" required>
            </div>
        </div>
        <!-- Submit Button -->
        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" class="btn btn-default" value="Submit" aria-pressed="true">
            </div>
        </div>
    </form>
</div>

<%- include("footer") %>
