<%- include("header") %>
<center><h5 style="margin-top: 30px; background-color: black; color: white; width: 50%;">Add Quiz</h5></center>
<div class="container d-flex justify-content-center mt-3" style="width:100%;">
    <div class="col-md-6">
        <form action="/quizaddpost" method="post">
            <div class="form-group row">
                <label for="name" class="col-sm-3 col-form-label">
                    Name
                </label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" name="name" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="description" class="col-sm-3 col-form-label">
                    description
                </label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" name="description" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="created" class="col-sm-3 col-form-label">
                    created by
                </label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" name="created_by" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="people_attended" class="col-sm-3 col-form-label">
                    People Attended
                </label>
                <div class="col-sm-9">
                    <input type="number" class="form-control" name="people_attended" required>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-9 offset-sm-3">
                    <input type="submit" class="btn btn-default" value="Submit" aria-pressed="true">
                </div>
            </div>
        </form>
    </div>
</div>


<%- include("footer") %>
