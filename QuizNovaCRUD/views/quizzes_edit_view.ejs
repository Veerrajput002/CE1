<%- include("header") %>
<center>
    <h5 style="margin-top: 30px; background-color: black; color: white; width: 50%;">Edit Quiz</h5>
</center>
<div class="container d-flex justify-content-center mt-3" style="width:100%;">
    <div class="col-md-6">
        <form action="/quizeditpost" method="post">
            <% if (quiz && quiz._id) { %>
                <input type="hidden" name="id" value="<%= quiz._id %>">
            <% } %>

            <div class="form-group row">
                <label for="name" class="col-sm-3 col-form-label">
                    Name
                </label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" name="name" value="<%= quiz ? quiz.name : '' %>" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="description" class="col-sm-3 col-form-label">
                    description
                </label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" name="description" value="<%= quiz ? quiz.description : '' %>" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="created_by" class="col-sm-3 col-form-label">
                    created_by
                </label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" name="created_by" value="<%= quiz ? quiz.created_by : '' %>" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="people_attended" class="col-sm-3 col-form-label">
                    People Attended
                </label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" name="people_attended" value="<%= quiz ? quiz.people_attended : '' %>" required>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-9 offset-sm-3">
                    <input type="submit" class="btn btn-default" value="Submit" aria-pressed="true">
                </div>
            </div>
        </form>
    </div>
</div>
<%- include("footer") %>
